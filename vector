package ejercicio4;

import java.util.Scanner;


public class Ejercicio3 {


  public static void main(String[] args) {
       
    Scanner DD = new Scanner(System.in);
    
        int[]numeros =new int[10];
       
        int suma =0 ;
        
        System.out.println("ingresa 10 numeros: ");
         for (int i = 0; i < numeros.length; i++) {
         numeros[i] = DD.nextInt();
         
         suma +=numeros [i];
         
        }
        
         System.out.println("ingrese el numero que desea contar");
         
        int numerobuscado=DD.nextInt();
        
        int contador=0;
        
        for (int num : numeros) {
            if (num == numerobuscado){
                contador++;
            }
             }
        
           double promedio =suma/10.0;
           
            System.out.println("El numero es "+numerobuscado+ " se ingreso "+contador+ " veces ");
            
            System.out.println("el promedio de todos los datos ingresados es : "+promedio);
            DD.close();
      
    }
    
}
